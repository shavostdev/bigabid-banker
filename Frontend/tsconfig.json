
{
    "compilerOptions": {
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true ,
      "sourceMap": true ,
      "target": "ESNext" ,
      "jsx": "react-jsxdev" ,
      "types": ["vite/client"] ,
      "module": "es2020" ,
      "moduleResolution": "node",
      "experimentalDecorators": true ,
      "declaration": false,
      "removeComments": true ,
      "noImplicitReturns": true ,
      "noUnusedLocals": false ,
      "strict": true ,
      "outDir": "dist",
      "baseUrl": "." ,
      "typeRoots": [
        "node_modules/@types"] ,
      "strictNullChecks": true ,
      "allowJs": true ,
      "alwaysStrict": true,
      "checkJs": true,
      "lib": ["DOM", "ESNext"],
      "isolatedModules": true,
    },
    "include": ["src/**/*", "*"],
    "exclude": ["dist", "node_modules","build"]
  }